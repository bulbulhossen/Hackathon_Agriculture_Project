<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bulbulhossen.hackathon_krishi">
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash_Gallery.Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GridView_Adapter_Gallery.Grid_main_Activity"></activity>
        <activity android:name=".ListView_Class.List_main"></activity>
        <activity android:name=".Details_class.Details_Class"></activity>
        <activity android:name=".Button_Style_Gallery.Button_style_main"></activity>

        <activity
            android:name=".live.ExampleActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".live.ExampleSupportFragmentActivity"
            android:configChanges="orientation|screenSize" >
        </activity>

        <activity android:name="com.livechatinc.inappchat.ChatWindowActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>